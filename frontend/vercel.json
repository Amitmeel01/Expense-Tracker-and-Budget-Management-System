{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/:path*"
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "framework": "create-react-app"
}
